datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id       String @id @default(uuid())
  email    String @unique
  password String
  createdAt DateTime @default(now())

  urls      Url[]
}
model Url {
  id         String  @id @default(uuid())
  original   String  
  short      String  @unique
  clicks     Int     @default(0)
  userId     String? 
  user       User?   @relation(fields: [userId], references: [id])
  createdAt  DateTime @default(now())
}

